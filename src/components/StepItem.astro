---
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'

type Img = {
  src: string
  alt: string
}

type Props = {
  stepNo: number
  imagePath: string
  alt: string
  description: string
}

const { stepNo, imagePath, alt, description } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif}')

if (!images[imagePath]) throw new Error(`image: ${imagePath} not found!`)

---
<div class="flex justify-between">
  <div>
    <h3 class="text-primary font-medium text-2xl">
      <span class="border-b border-primary">
        STEP {stepNo}
      </span>
    </h3>
    <p class="w-48 mt-5 text-xs">{description}</p>
  </div>
  <Image src={images[imagePath]()} alt={alt} class='w-32'>
</div>